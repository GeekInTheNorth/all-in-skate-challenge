@model AllInSkateChallenge.Features.Contact.ContactViewModel

<form asp-controller="Contact" asp-action="Index" method="post">
    <div class="form-group form-group--name">
        <label asp-for="@Model.Name"></label>
        <input asp-for="@Model.Name" class="form-control" />
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>
    <div class="form-group form-group--email">
        <label asp-for="@Model.Email"></label>
        <input asp-for="@Model.Email" class="form-control" />
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
    </div>
    <div class="form-group form-group--reason">
        <label asp-for="@Model.Reason"></label>
        <input asp-for="@Model.Reason" class="form-control" />
        <span asp-validation-for="@Model.Reason" class="text-danger"></span>
    </div>
    <div class="form-group form-group--Message">
        <label asp-for="@Model.Message"></label>
        <input asp-for="@Model.Message" class="form-control" />
        <span asp-validation-for="@Model.Message" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@if (!string.IsNullOrWhiteSpace(Model.Reason))
{
    <div class="alert alert-danger mt-3" role="alert">
        An issue has been encountered with submitting your contact form.
    </div>
}